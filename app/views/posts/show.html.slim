- title "| #{@post.title}"

.col.s12.z-depth-1.white style=("padding: 30px;")
  h3= @post.title.html_safe
  hr
  p= @post.content.html_safe
  hr
  strong= "Дата публикации: #{time_ago_in_words(@post.created_at)} назад"

  - if user_signed_in?
    br
    = link_to 'Редактировать ', edit_post_path(@post)
    '|
    = link_to 'Назад', posts_path
