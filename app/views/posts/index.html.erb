<p id="notice"><%= notice %></p>

<h1>Список записей</h1>

<%= link_to 'Создать новую запись', new_post_path %>

<%= will_paginate %>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Текст записи</th>
      <th colspan="3"></th>
      <th>Время создания</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Показать', post %></td>
        <td><%= link_to 'Редактировать', edit_post_path(post) %></td>
        <td><%= link_to 'Удалить', post, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить запись?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>
